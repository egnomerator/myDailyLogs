@using MyDailyLogs.ViewModels.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Constants.WebAppDisplayName - @ViewBag.Title</title>
    @Styles.Render("~/bundles/Content/css")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Constants.WebAppDisplayName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="viewWindow">
            @RenderBody()
        </div>
        <hr />
        <footer>
            @{
                // getting version parts
                //      -manually using VS built-in version formatting differently: as major.minor.revision
                var version = ViewContext.Controller.GetType().Assembly.GetName().Version;
                var vMajor = version.Major;
                var vMinor = version.Minor;
                var vRevision = version.Build;
                var vFmtMmr = $"{vMajor}.{vMinor}.{vRevision}";
            }
            <p>&copy; @DateTime.Now.Year - @Constants.WebAppDisplayName v.@vFmtMmr</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Common")
    @RenderSection("scripts", required: false)
</body>
</html>
